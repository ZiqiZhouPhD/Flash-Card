<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_delete"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/top_bar_layout_delete"
            >

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/top_bar_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:title="Delete"
                app:titleCentered="true"
                app:navigationIcon="@drawable/ic_back_arrow" />

        </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:layout_margin="24dp"
            android:id="@+id/edit_text_search_for_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_hint_delete_search"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/top_bar_layout_delete" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_search_results"
        android:layout_width="match_parent"
        android:name="com.ziqiphyzhou.flashcard.card_delete.presentation.DeleteFragment"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_search_for_delete"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>